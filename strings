print (" ")
print ("Strings")
print (" ")

def getStringCharLength(a):
	print ("The Character length of ", a)
	return len(a)

def toLowerCase(a):
	print ("Convert ", a ," to lower case")
	return a.lower()

def toUpperCase(a):
	print ("Convert ", a ," to upper case")
	return a.upper()

def returnSpecificChar(a,b):
	print ("Returns the first character until the ", b)
	return a[0:b]

def concatString(a,b):
	print ("Returns the Concat of ", a ," and ", b)
	return a + b

def stringRepetition(a,b):
	print ("The word ", a ," will be repeated ", b ," times")
	return a * b

def returnIfCharExist(a,b):
	print ("Returns True if character ", a ,"does not exist in ", b)
	return (a not in b)

def returnRStrip(a):
	print ("The word ", a ,"trailing white spaces would be removed")
	return a.rstrip() + "REMOVEDSPACES"

def returnSwapCase(a):
	print ("invert the cases of the word ", a)
	return a.swapcase()

def returnStringIsDigit(a):
	print ("Check whether string ", a ," contains only digit")
	return a.isdigit()

print ("Get the character length of the given string")
inpt1 = input("Enter a string: ")
print ("Output: ", getStringCharLength(inpt1))
print (" ")
print ("Convert given string to lowercase")
inpt1 = input("Enter a string: ")
print ("Output: ", toLowerCase(inpt1))
print (" ")
print ("Convert given string to uppercase")
inpt1 = input("Enter a string: ")
print ("Output: ", toUpperCase(inpt1))
print (" ")
print ("Get specific character on given string and index")
inpt1 = input("Enter a string: ")
inpt2 = int(input("Enter a number: "))
print ("Output: ", returnSpecificChar(inpt1, inpt2))
print (" ")
print ("Concat given strings")
inpt1 = input("Enter first string: ")
inpt2 = input("Enter second string: ")
print ("Output: ", concatString(inpt1, inpt2))
print (" ")
print ("Enter a string and repeat it with the given value")
inpt1 = input("Enter a string: ")
inpt2 = int(input("Enter a number: "))
print ("Output: ", stringRepetition(inpt1, inpt2))
print (" ")
print ("Get if the character exist in given string")
inpt1 = input("Enter a character: ")
inpt2 = input("Enter a string: ")
print ("Output: ", returnIfCharExist(inpt1, inpt2))
print (" ")
print ("Remove all trailing empty spaces on string")
inpt1 = input("Enter a string: ")
print ("Output: ", returnRStrip(inpt1))
print (" ")
print ("Reverse the case of the string passed")
inpt1 = input("Enter a string: ")
print ("Output: ", returnSwapCase(inpt1))
print (" ")
print ("Checks whether given string can be converted to digit")
inpt1 = input("Enter a string: ")
print ("Output: ", returnStringIsDigit(inpt1))
